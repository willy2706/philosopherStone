<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/tradeBoxOfferImageView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Offer Ammount"
        android:id="@+id/tradeBoxOfferItemAmountText"
        android:gravity="center_horizontal|center_vertical"/>
    <ImageView
        android:id="@+id/tradeBoxDemandImageView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="DemandAmount"
        android:id="@+id/tradeBoxDemandItemAmountText"
        android:gravity="center_horizontal|center_vertical"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Button"
        android:id="@+id/tradeBoxButton"
        android:layout_gravity="center"/>

</LinearLayout>